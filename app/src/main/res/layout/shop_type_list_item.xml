<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_shop_type_list_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#313335"
    android:orientation="vertical"
    android:padding="10dp">
    <!--313335-->
    <ImageView
        android:id="@+id/iv_item_list_type"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/lc_error" />

    <TextView
        android:id="@+id/tv_name_item_list_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_item_list_type"
        android:padding="14dp"
        android:singleLine="true"
        android:text="名字"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/tv_author_item_list_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_name_item_list_type"
        android:padding="7dp"
        android:text="作者"
        android:textColor="#5b6161" />

    <TextView
        android:id="@+id/tv_like_item_list_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_author_item_list_type"
        android:drawableLeft="@drawable/like_type_item_heart"
        android:paddingRight="7dp"
        android:text="123"
        android:textColor="#78A5C4" />

    <TextView
        android:id="@+id/tv_price_item_list_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_author_item_list_type"
        android:padding="7dp"
        android:text="￥999"
        android:textColor="#78A5C4" />


</RelativeLayout>