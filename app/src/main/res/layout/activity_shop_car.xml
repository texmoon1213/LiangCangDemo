<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context="com.example.administrator.liangcangdemo.Activity.ShopCarActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/text_huise" />

    <ImageView
        android:id="@+id/iv_goods_image_shopcar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/lc_error" />

    <TextView
        android:id="@+id/tv_brand_name_shopcar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_goods_image_shopcar"
        android:layout_marginLeft="10dp"
        android:text="tv_brand_name_shopcar"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_goods_name_shopcar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_brand_name_shopcar"
        android:layout_marginLeft="10dp"
        android:text="tv_goods_name_shopcar"
        android:textColor="@color/colorWhite"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_price_shopcar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_goods_name_shopcar"
        android:layout_marginLeft="10dp"
        android:text="tv_price_shopcar"
        android:textColor="@color/zhuti_shenlan"
        android:textSize="24sp" />

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/tv_price_shopcar"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="20dp"
        android:background="@color/text_huise" />

    <TextView
        android:id="@+id/tv_type_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_line"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="type_name"
        android:textColor="@color/colorWhite" />

    <LinearLayout
        android:id="@+id/ll_attrList_shopcar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_type_name"
        android:orientation="horizontal"></LinearLayout>

    <TextView
        android:id="@+id/tv_addsubview_shopcar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_attrList_shopcar"
        android:layout_marginLeft="5dp"
        android:text="数量"
        android:textColor="@color/colorWhite" />

    <com.example.administrator.liangcangdemo.view.AddSubView
        android:id="@+id/add_sub_view"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_below="@id/tv_addsubview_shopcar"></com.example.administrator.liangcangdemo.view.AddSubView>

    <Button
        android:id="@+id/btn_confirm_shopcar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:text="确认" />
</RelativeLayout>
